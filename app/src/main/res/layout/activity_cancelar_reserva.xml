<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservaGRASS"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/new_login_gradients">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Here you can put your logo or brand name -->


            <ImageView
                android:layout_width="358dp"
                android:layout_height="192dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:padding="16dp"
                android:src="@drawable/prueba" />

            <TextView
                android:id="@+id/txt_CR_NomUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <TextView
                android:id="@+id/txt_CR_NomGRASS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/grass"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Nombre de GRASS"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />
            <TextView
                android:id="@+id/txt_CR_PrecioGrass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/dolar"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Precio Grass"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />



                <TextView
                    android:id="@+id/txt_CR_fechaRESERVA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/png"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Fecha de Reserva"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff" />



            <View
                android:id="@+id/view40"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />


            <TextView
                android:id="@+id/txt_CR_HoraInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/timeinicio"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Hora Inicio (6 - 22)"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />






            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />
            <TextView
                android:id="@+id/txt_CR_horaFIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/timefin"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Hora FIN "
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />


            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/txt_CR_Motivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/light_green_primary"
                android:drawableLeft="@drawable/peligro"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="MOTIVO "
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />


            <View
                android:id="@+id/view15"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />





            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />
            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />


            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />


            <Button
                android:id="@+id/btn_CR_ElimnarReser"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_login"
                android:clickable="true"
                android:padding="16dp"
                android:text="Eliminar Reserva"
                android:textAllCaps="false"
                android:textColor="#2BFA7D"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_CR_Cancelar"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_login"
                android:clickable="true"
                android:padding="16dp"
                android:text="CANCELAR"
                android:textAllCaps="false"
                android:textColor="#2BFA7D"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>